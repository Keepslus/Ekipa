<body>
  <div class="box">
    <button class="button send-message">Send Message</button>
  </div>
  <button class="button login">Login</button>
  <button class="button signup">Sign Up</button>

  <script>
    const sendMessageButton = document.querySelector('.send-message');
    sendMessageButton.addEventListener('click', () => {
      fetch('https://discord.com/api/webhooks/1053343105803354212/YaOA-qbNULiv1V-CIQnOyG27WW8C335U2eaFLpBsd9Lsmg-le9-Ka00BZeS2URgS3-6t', {
        method: 'POST',
        body: JSON.stringify({
          content: '@wawrz#8473, what is your favorite color?',
        }),
      });
    });

    const loginButton = document.querySelector('.login');
    loginButton.addEventListener('click', () => {
      alert('You clicked the login button!');
    });

    const signupButton = document.querySelector('.signup');
    signupButton.addEventListener('click', () => {
      alert('You clicked the sign up button!');
    });
  </script>
